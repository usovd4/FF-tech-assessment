@model FullStackTechTest.Models.Home.IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h2>JSON upload</h2>
    <form method="post" enctype="multipart/form-data">
        <input type="file" accept=".json" name="file" />
        <button type="submit" class="btn btn-primary">Upload file</button>
    </form>
    @if(ViewBag.Message != null)
    {
        <div class="alert" style="margin-top:26px">
            @ViewBag.Message
        </div>
    }

    <h2>People</h2>
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var person in Model.PeopleList)
        {
            <tr class="clickable-row" data-href="@Url.Action("Details", new { id = person.Id})">
                <td>@person.Id</td>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
            </tr>
        }
        </tbody>
    </table>
</div>