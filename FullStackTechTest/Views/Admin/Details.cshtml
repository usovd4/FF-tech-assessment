@model FullStackTechTest.Models.Admin.SpecialiesDetailsViewModel

@{
    ViewData["Title"] = Model.IsEditing ? "Edit " : "" + $"{Model.Speciality.SpecialityName}";
}

<div class="container">
    <div class="pb-4">
        @if (!Model.IsEditing)
        {
            <a href="@Url.Action("Index")" class="btn btn-primary" role="button">Back</a>
            <a href="@Url.Action("Edit", new { id = Model.Speciality.Id })" class="btn btn-primary" role="button">Edit</a>
        }
        else {
            <a href="@Url.Action("Details", new { id = Model.Speciality.Id })" class="btn btn-primary" role="button">Cancel</a>
        }
    </div>

    @using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { @class = "form-inline" }))
    {
        
        <div class="form-group pb-4">
            <label>Id:</label>
            <input type="number" name="speciality.id" value="@Model.Speciality.Id" class="form-control-plaintext" readonly/>
        </div>

        <div class="form-group pb-1">
            <label>Speciality:</label>
            <input type="text" name="speciality.specialityName" value="@Model.Speciality.SpecialityName" class="@(Model.IsEditing ? "form-control" : "form-control-plaintext")" @(Model.IsEditing ? "" : "readonly")/>
        </div>

        
        @if (Model.IsEditing)
        {
            <div>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        }
    }
</div>